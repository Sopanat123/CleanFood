<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <listener-class>listener.Init</listener-class>
    </listener>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>controller.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>controller.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditAccount</servlet-name>
        <servlet-class>controller.EditAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagePromotion</servlet-name>
        <servlet-class>controller.ManagePromotion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderProcess</servlet-name>
        <servlet-class>controller.OrderProcess</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageCart</servlet-name>
        <servlet-class>controller.ManageCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessComment</servlet-name>
        <servlet-class>controller.ProcessComment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageMenu</servlet-name>
        <servlet-class>controller.ManageMenu</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageOrder</servlet-name>
        <servlet-class>controller.ManageOrder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddAdvertise</servlet-name>
        <servlet-class>controller.AddAdvertise</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveAdvertise</servlet-name>
        <servlet-class>controller.RemoveAdvertise</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/reg.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageCart</servlet-name>
        <url-pattern>/managecart.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditAccount</servlet-name>
        <url-pattern>/account.edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderProcess</servlet-name>
        <url-pattern>/orderprocess.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagePromotion</servlet-name>
        <url-pattern>/managepromotion.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessComment</servlet-name>
        <url-pattern>/processcomment.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageMenu</servlet-name>
        <url-pattern>/managemenu.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageOrder</servlet-name>
        <url-pattern>/manageorder.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddAdvertise</servlet-name>
        <url-pattern>/addadvertise.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveAdvertise</servlet-name>
        <url-pattern>/removeadvertise.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>promotion.jsp</welcome-file>
        <welcome-file>sign_in.jsp</welcome-file>
        <url-pattern>path/*</url-pattern>
    </welcome-file-list>
    <jsp-config>
    </jsp-config>
    <resource-ref>
        <description>jdbc:mysql://localhost:3306/cleanfooddb?zeroDateTimeBehavior=convertToNull</description>
        <res-ref-name>cfDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
